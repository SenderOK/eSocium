@model IEnumerable<eSocium.Domain.Entities.LinkConfiguration>

@{
    ViewBag.Title = "Your Link Configurations";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>
@if (TempData["message"] != null)
{
    <div class="Message">@TempData["message"]</div>
}

<p>
    @Html.ActionLink("Create New Link Configuration", "Create")
</p>
<table>
    <tr>
        <th style="width: 100px">
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th style="width: 100px">
            @Html.DisplayNameFor(model => model.CreatorName)
        </th>
        <th style="width: 100px">
            @Html.DisplayNameFor(model => model.CreationTime)
        </th>
        <th style="width: 100px">
            @Html.DisplayNameFor(model => model.LastModificationTime)
        </th>        
        <th style="width: 200px">
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th style="width: 100px"></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)                
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatorName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreationTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastModificationTime)
            </td>            
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { LinkConfigurationID = item.LinkConfigurationID })
                <br>
                @Html.ActionLink("Delete", "Delete", new { LinkConfigurationID = item.LinkConfigurationID },
                    new { onclick = "return confirm('Are you sure you want to delete the link configuration?')" })
            </td>
        </tr>
    }

</table>